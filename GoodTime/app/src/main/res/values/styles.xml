<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="android:windowBackground">@color/white_opaque</item>

    </style>

    <!-- Main activity theme. -->
    <style name="MyActivityTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Title</item>
    </style>

    <!-- Settings activity theme. -->
    <style name="SettingsTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Title.Home</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Title" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="logo">@drawable/app_logo</item>
    </style>

    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Title.Home" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">useLogo|showHome|showTitle|homeAsUp</item>
        <item name="logo">@drawable/app_logo</item>
    </style>

</resources>
